<?xml version="1.0" encoding="UTF-8"?>
<PharmML  xmlns="http://www.pharmml.org/2013/03/PharmML"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.pharmml.org/2013/03/PharmML http://www.pharmml.org/2013/03/PharmML"
    xmlns:math="http://www.pharmml.org/2013/03/Maths"
    xmlns:ct="http://www.pharmml.org/2013/03/CommonTypes"
    writtenVersion="0.2.2" id="i1"> 
    
    <ct:Name>Example 2 - simulation continuous PK (Bonate 2012)</ct:Name>
    
    <IndependentVariable symbId="t"/>
    
    <!-- residual errors model definition  -->
    <ct:FunctionDefinition symbolType="real" symbId="proportional">
        <ct:FunctionArgument symbolType="real" symbId="b"/>
        <ct:FunctionArgument symbolType="real" symbId="f"/>
        <ct:Definition>
            <math:Equation>
                <math:Binop op="times">
                    <ct:SymbRef symbIdRef="b"/>
                    <ct:SymbRef symbIdRef="f"/>
                </math:Binop>
            </math:Equation>
        </ct:Definition>
    </ct:FunctionDefinition>
    
    <!-- model definition -->
    <ModelDefinition xmlns="http://www.pharmml.org/2013/03/ModelDefinition">
        
        <!-- variability model -->
        <VariabilityModel blkId="randEffect" type="parameterVariability">
            <Level symbId="indiv"/>
        </VariabilityModel>
        <VariabilityModel blkId="resErr" type="residualError">
            <Level symbId="residual"/>
        </VariabilityModel>
        
        <!-- covariate model -->
        <CovariateModel blkId="cm1">
            <SimpleParameter symbId="pop_Weight">
                <ct:Assign>
                    <ct:Real>80</ct:Real>
                </ct:Assign>
            </SimpleParameter>
            <SimpleParameter symbId="omega_Weight">
                <ct:Assign>
                    <ct:Real>0.12</ct:Real>
                </ct:Assign>
            </SimpleParameter>
            <Covariate symbId="Weight">
                <Continuous>
                    <NormalDistribution xmlns="http://www.uncertml.org/3.0" definition="http://www.uncertml.org/distributions/normal">
                        <mean>
                            <var varId="pop_Weight"/>
                        </mean>
                        <stddev>
                            <var varId="omega_Weight"/>
                        </stddev>
                    </NormalDistribution>
                    <Transformation>
                        <Equation xmlns="http://www.pharmml.org/2013/03/Maths">
                            <Binop op="power">
                                <Binop op="divide">
                                    <ct:SymbRef symbIdRef="Weight"/>
                                    <ct:Real>70</ct:Real>
                                </Binop>
                                <ct:SymbRef blkIdRef="pm1" symbIdRef="theta2"/>
                            </Binop>
                        </Equation>
                    </Transformation>
                </Continuous>
            </Covariate>
        </CovariateModel>   
        
        <!-- parameter model -->
        <ParameterModel blkId="pm1">
            <SimpleParameter symbId="Ka"/>
            <SimpleParameter symbId="tau"/>
            <SimpleParameter symbId="theta2"/>
            <SimpleParameter symbId="pop_theta1"/>
            <SimpleParameter symbId="omega_theta1"/>
            <SimpleParameter symbId="pop_V"/>
            <SimpleParameter symbId="omega_V"/>            
            <!-- CL -->
            <SimpleParameter symbId="CL">
                <ct:Assign>
                    <Equation xmlns="http://www.pharmml.org/2013/03/Maths">
                        <Binop op="times">
                            <ct:SymbRef symbIdRef="theta1"/>
                            <ct:SymbRef blkIdRef="cm1" symbIdRef="Weight"/>
                        </Binop>
                    </Equation>
                </ct:Assign>
            </SimpleParameter>
            <!-- theta1 -->
            <RandomVariable symbId="eta_theta1">
                <ct:VariabilityReference>
                    <ct:SymbRef blkIdRef="randEffect" symbIdRef="indiv"/>
                </ct:VariabilityReference>
                <NormalDistribution xmlns="http://www.uncertml.org/3.0" definition="http://www.uncertml.org/distributions/normal">
                    <mean>
                        <rVal>0</rVal>
                    </mean>
                    <stddev>
                        <var varId="omega_theta1"/>
                    </stddev>
                </NormalDistribution>
            </RandomVariable>
            <IndividualParameter symbId="theta1">
                <GaussianModel>
                    <Transformation>log</Transformation>
                    <LinearCovariate>
                        <PopulationParameter>
                            <ct:Assign>
                                <ct:SymbRef symbIdRef="pop_theta1"/>
                            </ct:Assign>
                        </PopulationParameter>
                    </LinearCovariate>
                    <RandomEffects>
                        <ct:SymbRef symbIdRef="eta_theta1"/>
                    </RandomEffects>
                </GaussianModel>
            </IndividualParameter>
            <!-- V -->
            <RandomVariable symbId="eta_V">
                <ct:VariabilityReference>
                    <ct:SymbRef blkIdRef="randEffect" symbIdRef="indiv"/>
                </ct:VariabilityReference>
                <NormalDistribution xmlns="http://www.uncertml.org/3.0" definition="http://www.uncertml.org/distributions/normal">
                    <mean>
                        <rVal>0</rVal>
                    </mean>
                    <stddev>
                        <var varId="omega_V"/>
                    </stddev>
                </NormalDistribution>
            </RandomVariable>
            <IndividualParameter symbId="V">
                <GaussianModel>
                    <Transformation>log</Transformation>
                    <LinearCovariate>
                        <PopulationParameter>
                            <ct:Assign>
                                <ct:SymbRef symbIdRef="pop_V"/>
                            </ct:Assign>
                        </PopulationParameter>
                    </LinearCovariate>
                    <RandomEffects>
                        <ct:SymbRef symbIdRef="eta_V"/>
                    </RandomEffects>
                </GaussianModel>
            </IndividualParameter>
        </ParameterModel>
        
        <!-- structural model -->
        <StructuralModel blkId="sm1">
            <ct:Variable symbolType="real" symbId="D"/>
            <ct:Variable symbolType="real" symbId="tD"/>
            <ct:Variable symbolType="real" symbId="k">
                <ct:Assign>
                    <math:Equation>
                        <math:Binop op="divide">
                            <ct:SymbRef blkIdRef="pm1" symbIdRef="CL"/>
                            <ct:SymbRef blkIdRef="pm1" symbIdRef="V"/>
                        </math:Binop>
                    </math:Equation>
                </ct:Assign>
            </ct:Variable>
            <!-- Css -->
            <ct:Variable symbolType="real" symbId="Css">
                <ct:Assign>
                    <Equation xmlns="http://www.pharmml.org/2013/03/Maths">
                        <Binop op="times">
                            <Binop op="divide">
                                <ct:SymbRef symbIdRef="D"/>
                                <ct:SymbRef blkIdRef="pm1" symbIdRef="V"/>
                            </Binop>
                            <Binop op="times">
                                <Binop op="divide">
                                    <ct:SymbRef blkIdRef="pm1" symbIdRef="Ka"/>
                                    <Binop op="minus">
                                        <ct:SymbRef blkIdRef="pm1" symbIdRef="Ka"/>
                                        <ct:SymbRef symbIdRef="k"/>
                                    </Binop>
                                </Binop>
                                <Binop op="minus">
                                    <Binop op="divide">
                                        <Uniop op="exp">
                                            <Binop op="times">
                                                <Uniop op="minus">
                                                    <ct:SymbRef symbIdRef="k"/>
                                                </Uniop>
                                                <Binop op="minus">
                                                    <ct:SymbRef symbIdRef="t"/>
                                                    <ct:SymbRef symbIdRef="tD"/>                                                    
                                                </Binop>
                                            </Binop>
                                        </Uniop>
                                        <Binop op="minus">
                                            <ct:Real>1</ct:Real>
                                            <Uniop op="exp">
                                                <Binop op="times">
                                                    <Uniop op="minus">
                                                        <ct:SymbRef symbIdRef="k"/>
                                                    </Uniop>
                                                    <ct:SymbRef blkIdRef="pm1" symbIdRef="tau"/>
                                                </Binop>
                                            </Uniop>
                                        </Binop>
                                    </Binop>
                                    <Binop op="divide">
                                        <Uniop op="exp">
                                            <Binop op="times">
                                                <Uniop op="minus">
                                                    <ct:SymbRef blkIdRef="pm1" symbIdRef="Ka"/>
                                                </Uniop>
                                                <Binop op="minus">
                                                    <ct:SymbRef symbIdRef="t"/>
                                                    <ct:SymbRef symbIdRef="tD"/>                                                    
                                                </Binop>
                                            </Binop>
                                        </Uniop>
                                        <Binop op="minus">
                                            <ct:Real>1</ct:Real>
                                            <Uniop op="exp">
                                                <Binop op="times">
                                                    <Uniop op="minus">
                                                        <ct:SymbRef blkIdRef="pm1" symbIdRef="Ka"/>
                                                    </Uniop>
                                                    <ct:SymbRef blkIdRef="pm1" symbIdRef="tau"/>
                                                </Binop>
                                            </Uniop>
                                        </Binop>
                                    </Binop>
                                </Binop>
                            </Binop>
                        </Binop>
                    </Equation>
                </ct:Assign>
            </ct:Variable>
        </StructuralModel>
        
        <!-- observation model -->
        <ObservationModel blkId="om1">
            <SimpleParameter symbId="b"/>
            <RandomVariable symbId="epsilon_Css">
                <ct:VariabilityReference>
                    <ct:SymbRef blkIdRef="resErr" symbIdRef="residual"/>
                </ct:VariabilityReference>
                <NormalDistribution xmlns="http://www.uncertml.org/3.0" definition="http://www.uncertml.org/distributions/normal">
                    <mean>
                        <rVal>0</rVal>
                    </mean>
                    <stddev>
                        <prVal>1</prVal>
                    </stddev>
                </NormalDistribution>
            </RandomVariable>
            <Standard symbId="Css_obs">
                <Output>
                    <ct:SymbRef blkIdRef="sm1" symbIdRef="Css"/>
                </Output>
                <ErrorModel>
                    <ct:Assign>
                        <Equation xmlns="http://www.pharmml.org/2013/03/Maths">
                            <FunctionCall>
                                <ct:SymbRef symbIdRef="proportional"/>
                                <FunctionArgument symbId="b">
                                    <ct:SymbRef symbIdRef="b"/>
                                </FunctionArgument>
                                <FunctionArgument symbId="f">
                                    <ct:SymbRef blkIdRef="sm1" symbIdRef="Css"/>
                                </FunctionArgument>
                            </FunctionCall>
                        </Equation>
                    </ct:Assign>
                </ErrorModel>
                <ResidualError>
                    <ct:SymbRef symbIdRef="epsilon_Css"/>
                </ResidualError>
            </Standard>
        </ObservationModel>
    </ModelDefinition>
    
    <!-- trial design -->
    <TrialDesign xmlns="http://www.pharmml.org/2013/03/TrialDesign">
        
        <!-- structure -->
        <Structure>
            <Epoch oid="epoch1">
                <Start>
                    <ct:Real>0</ct:Real>
                </Start>
                <End>
                    <ct:Real>12</ct:Real>
                </End>
                <Order>1</Order>
            </Epoch>
            <Arm oid="arm1"/>
            <Cell oid="cell1">
                <EpochRef oidRef="epoch1"/>
                <ArmRef oidRef="arm1"/>
                <SegmentRef oidRef="seg1"/>
            </Cell>
            <Segment oid="seg1">
                <ActivityRef oidRef="bolusOR"/>
            </Segment>
            <Activity oid="bolusOR">
                <Bolus>
                    <DoseAmount inputTarget="parameter"> 
                        <ct:SymbRef blkIdRef="sm1" symbIdRef="D"/>
                        <ct:Assign>
                            <ct:Real>100</ct:Real>
                        </ct:Assign>
                    </DoseAmount>
                    <SteadyState>
                        <EndTime>
                            <ct:SymbRef blkIdRef="sm1" symbIdRef="tD"/>
                            <ct:Assign>
                                <ct:Real>0</ct:Real>
                            </ct:Assign>
                        </EndTime>
                        <Interval>
                            <ct:SymbRef blkIdRef="pm1" symbIdRef="tau"/>
                            <ct:Assign>
                                <ct:Real>12</ct:Real>
                            </ct:Assign>
                        </Interval>
                    </SteadyState>
                </Bolus>
            </Activity>
        </Structure>
        
        <!-- population -->
        <Population>
            <!-- Define the variability level associated with the population -->
            <ct:VariabilityReference>
                <ct:SymbRef blkIdRef="randEffect" symbIdRef="indiv"/>
            </ct:VariabilityReference>
            
            <DataSet xmlns="http://www.pharmml.org/2013/08/Dataset">
                <Definition>
                    <Column columnId="id" columnType="id" valueType="id" columnNum="1"/>
                    <Column columnId="arm" columnType="arm" valueType="id" columnNum="2"/>
                    <Column columnId="rep" columnType="replicate" valueType="int" columnNum="3"/>
                </Definition>
                <Table>
                    <Row><ct:Id>i</ct:Id><ct:Id>arm1</ct:Id><ct:Int>50</ct:Int></Row>
                </Table>
            </DataSet>
        </Population>
    </TrialDesign>
    
    <!-- modelling steps -->
    <ModellingSteps xmlns="http://www.pharmml.org/2013/03/ModellingSteps">
        <!-- simulation steps -->
        <SimulationStep  oid="s1">
            <!-- b -->
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="om1" symbIdRef="b"/>
                <ct:Assign>
                    <ct:Real>0.1</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <!-- theta2 -->
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="pm1" symbIdRef="theta2"/>
                <ct:Assign>
                    <ct:Real>0.75</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <!-- Ka -->
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="pm1" symbIdRef="Ka"/>
                <ct:Assign>
                    <ct:Real>0.5</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <!-- theta1 -->
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_theta1"/>
                <ct:Assign>
                    <ct:Real>25</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_theta1"/>
                <ct:Assign>
                    <ct:Real>5</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <!-- V -->
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_V"/>
                <ct:Assign>
                    <ct:Real>250</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <ct:VariableAssignment>
                <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_V"/>
                <ct:Assign>
                    <ct:Real>100</ct:Real>
                </ct:Assign>
            </ct:VariableAssignment>
            <Observations>
                <Timepoints>
                    <ct:Sequence>
                        <ct:Begin><ct:Int>0</ct:Int></ct:Begin>
                        <ct:StepSize><ct:Int>1</ct:Int></ct:StepSize>
                        <ct:End><ct:Int>12</ct:Int></ct:End>
                    </ct:Sequence>
                </Timepoints>
                <Continuous>
                    <ct:SymbRef blkIdRef="om1" symbIdRef="Css_obs"/>
                </Continuous>
            </Observations>
        </SimulationStep>
        
        <!-- step dependencies -->
        <StepDependencies>
            <Step>
                <ct:OidRef oidRef="s1"/>
            </Step>
        </StepDependencies>
    </ModellingSteps>
</PharmML>